<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ControleGastosApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ControleGastosApp.Pages"
    Title=""
    FlyoutBehavior="Disabled"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">

    <ShellContent ContentTemplate="{DataTemplate local:AuthPage}" Route="auth" />
    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="main" />
    <ShellContent ContentTemplate="{DataTemplate local:CategoryListPage}" Route="categories" />
</Shell>
