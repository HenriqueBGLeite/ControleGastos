<?xml version="1.0" encoding="utf-8" ?>
<base:BasePage
    x:Class="ControleGastosApp.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:ControleGastosApp.Pages.Base"
    xmlns:enums="clr-namespace:ControleGastos.Core.Domain.Enums;assembly=ControleGastos.Core"
    xmlns:vm="clr-namespace:ControleGastosApp.ViewModels"
    Title=""
    x:DataType="vm:MainPageViewModel">
    <Grid RowDefinitions="Auto, *">
        <Border
            Background="{StaticResource White}"
            StrokeShape="RoundRectangle 0,0,34,34"
            StrokeThickness="0">
            <Grid
                Padding="22,30,22,15"
                ColumnDefinitions="45, *, 75"
                ColumnSpacing="5"
                RowDefinitions="Auto, *, Auto"
                RowSpacing="8">
                <Border
                    HorizontalOptions="Start"
                    Style="{StaticResource BorderRoundStyle}"
                    VerticalOptions="Center">
                    <Image Source="fi_user_black.png" WidthRequest="22" />
                </Border>

                <Border Grid.Column="1" Style="{StaticResource BorderPickerStyle}">
                    <Picker
                        Title="Selecione um mês"
                        HorizontalTextAlignment="Center"
                        ItemsSource="{Binding Months}"
                        SelectedItem="{Binding SelectedMonth, Converter={StaticResource IntToMonthConverter}}" />
                </Border>

                <Border
                    Grid.Column="2"
                    HorizontalOptions="End"
                    Style="{StaticResource BorderRoundStyle}"
                    VerticalOptions="Center">
                    <HorizontalStackLayout Spacing="4">
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ClickedLogoutCommand}" />
                        </HorizontalStackLayout.GestureRecognizers>
                        <Image Source="logout.png" WidthRequest="22" />
                        <Label
                            FontFamily="OpenSansSemibold"
                            Text="Sair"
                            TextColor="{StaticResource HintLabel}"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>
                </Border>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                    <Label HorizontalTextAlignment="Center" Text="Saldo atual em contas" />
                    <Label
                        FontFamily="OpenSansSemibold"
                        FontSize="28"
                        HorizontalTextAlignment="Center"
                        Text="R$ 0,00"
                        TextColor="{StaticResource NewBlack}" />
                    <Image
                        HorizontalOptions="Center"
                        Source="eye.png"
                        WidthRequest="22" />
                </VerticalStackLayout>

                <Grid
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="5">
                    <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Border
                            Background="{StaticResource Primary}"
                            HorizontalOptions="Start"
                            Style="{StaticResource BorderRoundStyle}"
                            VerticalOptions="Start">

                            <Image Source="fi_arrow_up.png" WidthRequest="22" />
                        </Border>
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            Text="Receitas"
                            TextColor="{StaticResource HintLabel}"
                            VerticalTextAlignment="End" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="R$ 0,00"
                            TextColor="{StaticResource Primary}"
                            VerticalTextAlignment="Start" />
                    </Grid>

                    <Grid
                        Grid.Column="1"
                        ColumnDefinitions="Auto,Auto"
                        ColumnSpacing="10"
                        HorizontalOptions="End">
                        <Border
                            Background="{StaticResource ActionRed}"
                            HorizontalOptions="Start"
                            Style="{StaticResource BorderRoundStyle}"
                            VerticalOptions="Start">

                            <Image Source="fi_arrow_down.png" WidthRequest="22" />
                        </Border>
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            Text="Despesas"
                            TextColor="{StaticResource HintLabel}"
                            VerticalTextAlignment="End" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="R$ 0,00"
                            TextColor="{StaticResource ActionRed}"
                            VerticalTextAlignment="Start" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1" RowDefinitions="*, Auto">
            <ScrollView>
                <VerticalStackLayout Padding="0,5" VerticalOptions="Center">
                    <Label
                        HorizontalOptions="Center"
                        Text="Aqui ficarão os cards de analise"
                        VerticalOptions="Center" />
                </VerticalStackLayout>
            </ScrollView>

            <Grid
                Grid.Row="1"
                Padding="3,8,3,0"
                ColumnDefinitions="1*,1*,1*,1*,1*">
                <VerticalStackLayout VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:TypeOperations.cards}" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="card.png" WidthRequest="22" />
                    <Label
                        FontSize="10"
                        HorizontalTextAlignment="Center"
                        Text="{Binding CardsOperation, Converter={StaticResource EnumDisplayNameConverter}}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:TypeOperations.categories}" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="categories.png" WidthRequest="22" />
                    <Label
                        FontSize="10"
                        HorizontalTextAlignment="Center"
                        Text="{Binding CategoriesOperation, Converter={StaticResource EnumDisplayNameConverter}}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:TypeOperations.transactions}" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="transaction.png" WidthRequest="22" />
                    <Label
                        FontSize="10"
                        HorizontalTextAlignment="Center"
                        Text="{Binding TransactionsOperation, Converter={StaticResource EnumDisplayNameConverter}}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="3" VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:TypeOperations.planning}" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="plan.png" WidthRequest="22" />
                    <Label
                        FontSize="10"
                        HorizontalTextAlignment="Center"
                        Text="{Binding PlanningOperation, Converter={StaticResource EnumDisplayNameConverter}}" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="4" VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:TypeOperations.settings}" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="setting.png" WidthRequest="22" />
                    <Label
                        FontSize="10"
                        HorizontalTextAlignment="Center"
                        Text="{Binding SettingsOperation, Converter={StaticResource EnumDisplayNameConverter}}" />
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </Grid>
</base:BasePage>